<!DOCTYPE ui:Binder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.sonnyproject.client.MovieCollectionPanel.Resources"
		field="resources" />

	<ui:style>
		.button {
		width: 100%;
		height: 40px;
		}

		.mainArea {
		border-left:
		1px solid #333333;
		padding: 10px;
		}

		.title {
		font-family: Verdana,
		sans-serif;
		color: #ffffff;
		font-weight: bold;
		font-size: 16px;
		text-align: center;
		padding: 5px 0;
		background-color: #323B38;
		}

		.navPanel {
		background: #EEEEEE;
		}

		.divider {
		height: 10px;
		background:	#999999;
		}

		.website {
		background-color: #DF1B1B;
		font-family: Verdana,
		sans-serif;
		font-size: 12px;
		text-align: center;
		padding: 10px 0;
		}

		.logo {
		background-color: #ffffff;
		height: 100px;
		}

		.emptyblock {
		background-color: #ffffff;
		height: 100px;
		}

		.loginbutton {
		padding: 10px;
		border-radius: 25px;
		height: 50px;
		width: 50px;
		position: absolute;
		top: 35%;
		right: 0%;
		}

		.footer {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;		
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX'>
		<g:west size="200">
			<g:ScrollPanel>
				<g:FlowPanel addStyleNames="{style.navPanel}">
					<g:HTMLPanel styleName="{style.logo}">
						<a href="#home">
							<g:Image resource="{resources.logo}" />
						</a>
					</g:HTMLPanel>
					<g:HTML styleName="{style.emptyblock}" />
					<g:HTML styleName="{style.divider}" />
					<g:Button addStyleNames="{style.button}" ui:field="home">Home</g:Button>
					<g:HTML styleName="{style.divider}" />
					<g:Button addStyleNames="{style.button}" ui:field="search">Movie
						Search</g:Button>
					<g:HTML styleName="{style.divider}" />
					<g:Button addStyleNames="{style.button}" ui:field="insert">Insert
						Movie</g:Button>
					<g:HTML styleName="{style.divider}" />
					<g:Button addStyleNames="{style.button}" ui:field="request">Request
						Movie</g:Button>
					<g:HTML styleName="{style.divider}" />
					<g:Button addStyleNames="{style.button}" ui:field="contact">Contact</g:Button>
					<g:HTML styleName="{style.divider}" />
					<g:Button addStyleNames="{style.button}" ui:field="user">User
						Configuration</g:Button>
					<g:HTML styleName="{style.divider}" />					
					<g:HTML addStyleNames="{style.footer}">
						<footer>
							<small>&copy; Copyright: Sonny Ng</small>
						</footer>
					</g:HTML>
				</g:FlowPanel>
			</g:ScrollPanel>
		</g:west>
		<g:east size="100">
			<g:ScrollPanel>
				<g:FlowPanel>
					<g:Button ui:field="login" styleName="{style.loginbutton}">Login</g:Button>
				</g:FlowPanel>
			</g:ScrollPanel>
		</g:east>
		<g:center>
			<g:HTMLPanel ui:field="mainArea" addStyleNames="{style.mainArea}" />
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>